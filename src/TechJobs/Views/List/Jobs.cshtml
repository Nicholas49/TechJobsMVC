<h1>@ViewBag.title</h1>

<h3>@ViewBag.jobs.Count Result(s)</h3>

@{
// TODO #3 - Use the same list display from Views/Search/Index.cshtml

    @if (ViewBag.jobs != null)
    {

        @foreach (Dictionary<string, string> jerb in ViewBag.jobs)
        {
            <table class="job-listing">
                @foreach (KeyValuePair<string, string> attr in jerb)
                {
                    <tr>
                        <td>@attr.Key</td>
                        <td>@attr.Value</td>
                    </tr>

                }
            </table>
        }
    }
}